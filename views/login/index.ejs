<div class="w3-center w3-light-grey w3-padding">
  <h3 class="w3-wide" style="font-weight: bold">WELCOME</h3>
</div>
<div class="w3-content w3-padding-32" style="max-width: 400px">
  <div class="w3-container w3-section">
    <h2 class="w3-wide" style="font-weight: bold">Login</h2>
    <form action="/login" method="POST">
      <label>E-mail</label><br>
      <input class="w3-input w3-light-grey w3-round-large w3-border-black" placeholder="Digite seu e-mail" type="text" name="email"><br>
      <label>Senha</label><br>
      <input class="w3-input w3-light-grey w3-round-large w3-border-black" placeholder="Digite sua senha" type="password" name="senha"><br>
      <button class="w3-button w3-block w3-round-large w3-black" type="submit">Logar</button>
    </form>
  </div>
</div>
